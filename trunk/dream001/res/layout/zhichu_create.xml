<?xml version="1.0" encoding="utf-8"?> 

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="@drawable/bg_320_480_cd_s"> 
    <ScrollView android:layout_width="fill_parent"
		    android:layout_height="389dip">
	<LinearLayout android:orientation="vertical" 
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"> 
	    <LinearLayout android:layout_marginTop="10dip"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"> 
	        <TextView android:id="@+id/zhichuleibie" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/zhichu_leibie"  
	        	android:width="80dip" 
	        	style="@style/fontBlack14"
	        	android:gravity="right"
	        	android:paddingRight="5dip"
	        	android:paddingTop="12dip"/>  
	         <Spinner android:id="@+id/zhichuSpinner" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
        		android:drawSelectorOnTop="true"
				android:minWidth="220dip"
				android:prompt="@string/choosezhichu_leibie"/>                  
	    </LinearLayout> 

	    <LinearLayout android:layout_marginTop="10dip"
	     	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"> 
	        <TextView android:id="@+id/zhichujine" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/jine" 
	        	android:width="80dip"
				style="@style/fontBlack14"
				android:gravity="right"
				android:paddingRight="5dip"/>
	        <EditText android:id="@+id/zhichunewjine" 
				android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:numeric="decimal"
	        	android:hint="@string/editTextJine" 
	        	android:width="220dip"></EditText> 
	    </LinearLayout>  
	     
	    <LinearLayout android:layout_marginTop="10dip"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"> 
	        <TextView android:id="@+id/zhichuriqi" 
	        	android:text="@string/riqi" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content"
	        	android:width="80dip"
	        	android:gravity="right"
	        	android:paddingRight="5dip"
				style="@style/fontBlack14"/>	        	
	        <TextView android:id="@+id/zhichuriqiview" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:width="170dip"
		        style="@style/fontBlack14"/>
	        <Button android:id="@+id/zhichusetriqi" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/set"/>      
	    </LinearLayout>  
	    
	    <LinearLayout android:layout_marginTop="10dip"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"> 
		    <TextView android:id="@+id/zhichuzhaoyao" 
		    	android:layout_height="wrap_content" 
		    	android:text="@string/zhaiyao" 
		    	android:layout_width="fill_parent"
				style="@style/fontBlack14"
				android:width="80dip" 
				android:gravity="right"
				android:paddingRight="5dip"/>
		    <EditText android:id="@+id/zhichuzhaoyaoedit" 
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content"  
		    	android:lines="5" 
		    	android:width="220dip" 
		    	android:gravity="top"></EditText> 
	    </LinearLayout>
	</LinearLayout>  
	</ScrollView>
	<LinearLayout android:layout_width="wrap_content"    
	    	android:layout_height="wrap_content" 
	    	android:orientation="horizontal"
	     	android:layout_marginTop="4dip">
		    <Button android:id="@+id/fhimgbt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/fh32_32"
				style="@style/fontBlack12"
				android:layout_marginLeft="10dip"/>
		    <Button android:id="@+id/bcimgbt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/bc32_32"
				style="@style/fontBlack12"
			android:layout_marginLeft="20dip"  
	    	android:layout_marginRight="20dip"/>	
		   	<Button android:id="@+id/xjzclbimgbt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/xz32_32"
				style="@style/fontBlack12"/>
	    </LinearLayout>
</LinearLayout>