<?xml version="1.0" encoding="utf-8"?> 

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="@drawable/bg_320_480_cd_s"> 
    <ScrollView android:layout_width="fill_parent"
		    android:layout_height="389dip">
	<LinearLayout android:orientation="vertical" 
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"> 
	    <LinearLayout android:layout_marginTop="10dip"
	     	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"> 
	        <TextView android:id="@+id/srleibCreatemingcheng" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/mingcheng" 
	        	android:width="80dip"
				style="@style/fontBlack14"
				android:gravity="right"
				android:paddingRight="5dip"/>
	        <EditText android:id="@+id/srleibCreatemingchengedit" 
				android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:width="220dip"></EditText> 
	    </LinearLayout>  
	    
	    <LinearLayout android:layout_marginTop="10dip"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"> 
		    <TextView android:id="@+id/srleibCreatezhaoyao" 
		    	android:layout_height="wrap_content" 
		    	android:text="@string/zhaiyao" 
		    	android:layout_width="fill_parent"
				style="@style/fontBlack14"
				android:width="80dip" 
				android:gravity="right"
				android:paddingRight="5dip"/>
		    <EditText android:id="@+id/srleibCreatezhaoyaoedit" 
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content"  
		    	android:lines="5" 
		    	android:width="220dip" 
		    	android:gravity="top"></EditText> 
	    </LinearLayout>
	</LinearLayout>  
	</ScrollView>
	<LinearLayout android:layout_width="wrap_content"    
	    	android:layout_height="wrap_content" 
	    	android:orientation="horizontal"
	     	android:layout_marginTop="4dip">
		    <Button android:id="@+id/fhimgbt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/fh32_32"
				style="@style/fontBlack12"
				android:layout_marginLeft="10dip"/>
		    <Button android:id="@+id/bcimgbt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/bc32_32"
				style="@style/fontBlack12"
			android:layout_marginLeft="20dip"/>
	    </LinearLayout>
</LinearLayout>