<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_480_320_sz_h"
    >
    <LinearLayout android:layout_width="wrap_content"    
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:layout_marginTop="6dip"
    android:layout_marginLeft="10dip"  
    android:layout_marginRight="5dip"> 
    <TextView android:text="@string/mingcheng"  
    android:width="100dip"
    android:layout_width="wrap_content" 
    android:layout_height="fill_parent"
    android:gravity="center"
    style="@style/fontBlack14" 
    />  
    <TextView android:layout_height="fill_parent"           
	android:text="@string/zhaiyao"  
	android:width="230dip"
	android:layout_width="wrap_content" 
	android:gravity="center"
	style="@style/fontBlack14" 
    />
	</LinearLayout >
    <ListView android:layout_width="wrap_content" 
        android:layout_height="193dip"
        android:id="@+id/leibei_list"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="5dip" 
		android:layout_marginLeft="5dip"  
    	android:layout_marginRight="5dip">
    </ListView>
    <LinearLayout android:layout_width="wrap_content"    
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:layout_marginTop="5dip">
	   <Button android:id="@+id/fhimgbt"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:background="@drawable/fh32_32"
			style="@style/fontBlack12"
			android:layout_marginLeft="12dip"/>
	    <Button android:id="@+id/xjimgbt"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:background="@drawable/xz32_32"
			style="@style/fontBlack12"
			android:layout_marginLeft="20dip"  
	    	android:layout_marginRight="20dip"/>
    </LinearLayout>
</LinearLayout >
